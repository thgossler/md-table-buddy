{
  "name": "md-table-buddy",
  "displayName": "Markdown Table Buddy",
  "description": "Convenience tools for working with tables in Markdown files",
  "version": "0.1.0",
  "publisher": "md-table-buddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/md-table-buddy"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "table",
    "format",
    "compact",
    "md"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md-table-buddy.compactTable",
        "title": "Compact Table",
        "category": "Markdown Table Buddy"
      },
      {
        "command": "md-table-buddy.compactAllTables",
        "title": "Compact All Tables",
        "category": "Markdown Table Buddy"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "md-table-buddy.submenu",
          "group": "markdown-table-buddy",
          "when": "editorLangId == markdown"
        }
      ],
      "md-table-buddy.submenu": [
        {
          "command": "md-table-buddy.compactTable",
          "group": "compact"
        },
        {
          "command": "md-table-buddy.compactAllTables",
          "group": "compact"
        }
      ],
      "commandPalette": [
        {
          "command": "md-table-buddy.compactTable",
          "when": "editorLangId == markdown"
        },
        {
          "command": "md-table-buddy.compactAllTables",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "submenus": [
      {
        "id": "md-table-buddy.submenu",
        "label": "Markdown Table Buddy"
      }
    ],
    "configuration": {
      "title": "Markdown Table Buddy",
      "properties": {
        "md-table-buddy.fileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [".md"],
          "description": "File extensions to treat as Markdown files (e.g., ['.md', '.mdx', '.markdown'])"
        },
        "md-table-buddy.compactTable.cellPadding": {
          "type": "boolean",
          "default": false,
          "description": "Add a space at the start and end of each cell content (e.g., '| cell |' instead of '|cell|')"
        },
        "md-table-buddy.compactTable.separatorPadding": {
          "type": "boolean",
          "default": false,
          "description": "Add a space at the start and end of separator row cells (requires cellPadding to be enabled)"
        },
        "md-table-buddy.compactTable.alignSeparatorWithHeader": {
          "type": "boolean",
          "default": false,
          "description": "Align separator row column widths with the header text widths"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
